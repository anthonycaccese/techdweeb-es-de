<!-- 
16:10 aspect ratio
based on 768x480
-->
<theme>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <itemSize>0.7 0.6</itemSize><!-- 597 288 -->
      </carousel>
   </view>

   <!--
   ///
   Gamelist View - List Variants
   ///
   -->
   <variant name="
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-cover,
      gamelist-list-screenshot
      ">
      <view name="gamelist">
         <image name="gamelist-textlist-background-shadow">
            <path>./_inc/images/gamelist-view/16-10/list-textlist-background-shadow.svg</path>
         </image>
         <image name="gamelist-textlist-background">
            <path>./_inc/images/gamelist-view/16-10/list-textlist-background.svg</path>
         </image>
         <image name="gamelist-system-logo">
            <pos>0.19270833 0.1</pos><!-- 148 48 -->
            <maxSize>0.29166667 0.125</maxSize><!-- 224 60 -->
         </image>
         <textlist name="gamelist-textlist">
            <pos>0.0 0.2</pos><!-- 0 96 -->
            <size>0.36458333 0.8</size><!-- 280 384 -->
            <selectorWidth>0.38541667</selectorWidth><!-- 296 -->
            <horizontalMargin>0.01041667</horizontalMargin><!-- 8 -->
         </textlist>
      </view>
   </variant>
